'''
def save(s):
    f=open("f:\\data.txt","w")
    f.write(s)
    f.close()

def read():
    f=open("f:\\data.txt","rb")
    #rb: read binary
    data=f.read()
    for d in data:
        print(hex(d),end="")
    f.close()

s="abc\nxyz\r\n123\r"
save(s)
read()
