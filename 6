'''
def count(fileName):
    no ={}
    for i in range(26):
        x=chr(ord('a')+i)
        no[x]=0
    f=open(fileName,"r")
    rows=f.readlines()
    for row in rows:
        s=row.strip("\n")
        for x in s:
            y=x.lower()
            if y>='a' and y<='z':
                no[y]=no[y]+1
    f.close()
    print(no)

fileName=input("输入文件按:")
count(fileName)
