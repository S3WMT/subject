'''
def read(fileName):
    st=[]
    f=open(fileName,"r")
    rows=f.readlines()
    for row in rows:
        s=row.strip("\n").split(" ")
        if len(s)==2:
            d={"Name":s[0],"Mark":float(s[1])}
            st.append(d)
    f.close()
    return st

def sort(st):
    for i in range(len(st)):
        for j in range(i+1,len(st)):
            if st[j]["Mark"]<st[i]["Mark"]:
                t=st[i]
                st[i]=st[j]
                st[j]=t
    return st

def save(st):
    f=open("f:\\sorted.txt","w")
    for s in st:
        f.write(s["Name"]+""+str(s["Mark"])+"\n")
    f.close()


fileName="f:\\marks.txt"
st=read(fileName)
st=sort(st)
save(st)
'''
'''
def save(s):
    f=open("f:\\data.txt","wb")
    #wb: write binary
    f.write(s.encode())
    f.close()

def read():
    f=open("f\\data.txt","rb")
    #rb: read binary
    data=f.read()
    s=data.decode()
    f.close()
    print(s)

s="abc\r\nxyz\n\r123\r456\n"
save(s)
read()
